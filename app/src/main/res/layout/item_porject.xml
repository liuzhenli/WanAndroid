<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/common_margin_large"
    android:layout_marginTop="@dimen/common_margin_normal"
    android:layout_marginRight="@dimen/common_margin_large"
    android:layout_marginBottom="@dimen/common_margin_normal"
    android:background="@drawable/s_list_item_bg_dark_1">

    <ImageView
        android:id="@+id/iv_project_cover"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_project_name"
        style="@style/ItemTitleStyle"
        android:maxLines="2"
        android:singleLine="false"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/iv_project_cover"
        app:layout_constraintTop_toTopOf="@+id/iv_project_cover" />

    <TextView
        android:id="@+id/tv_project_des"
        style="@style/ItemDesStyle"
        app:layout_constraintBottom_toTopOf="@+id/tv_project_share_time"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/iv_project_cover"
        app:layout_constraintTop_toBottomOf="@+id/tv_project_name" />

    <TextView
        android:id="@+id/tv_project_share_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_margin_normal"
        android:textColor="@color/text_color_99"
        android:textSize="@dimen/txt_size_12"
        app:layout_constraintBottom_toBottomOf="@+id/iv_project_cover"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/iv_project_cover"
        app:layout_constraintTop_toBottomOf="@+id/tv_project_name"
        app:layout_constraintVertical_bias="1" />
</androidx.constraintlayout.widget.ConstraintLayout>