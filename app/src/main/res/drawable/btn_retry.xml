<?xml version="1.0" encoding="utf-8"?>


<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" android:useLevel="false">
            <!-- 圆角 -->

            <stroke android:width="1px" android:color="@color/main" />
            <corners android:radius="5dp" />
            <size android:width="30dp" android:height="20dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" android:useLevel="false">
            <stroke android:width="1px" android:color="@color/white" />
            <!-- 圆角 -->
            <corners android:radius="8dp" />
            <size android:width="30dp" android:height="20dp" />
        </shape>
    </item>
</selector>